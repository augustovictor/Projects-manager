%h1
  = @project.name
%em
  = link_to "Edit", edit_project_path(@project)

%div
  %h3
    Description
  %label
    = @project.description

%hr

%div
  %h3
    Observations
  %label
    = @project.observations

%hr

%h3
  Tasks
%p
  = link_to "New task", new_task_path

- if !@project.tasks.empty?
  %table
    %thead
      %th
        Priority
      %th
        Name
      %th
        Observation
    %tbody
      - @project.tasks.each do |task|
        %tr
          %td
            = task.priority
          %td
            = link_to task.name, task_path(task)
          %td
            = task.observations

- else
  %em
    Any tasks yet
