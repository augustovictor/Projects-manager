= link_to "New task", new_task_path

%h1
  Tasks
- if !@tasks.empty?
  %table
    %thead
      %th
        Priority
      %th
        Project
      %th
        Name
      %th
        Observations
      %th
        Created at
      %th
        Actions

    %tbody
      - @tasks.each do |task|
        %tr
          %td
            = task.priority
          %td
            = link_to task.project.name, task.project
          %td
            = link_to task.name, task_url(task)
          %td
            = task.observations.truncate(50)
          %td
            = task.created_at.day
            \/
            = task.created_at.month
            \/
            = task.created_at.year
          %td
            = link_to "Delete", task_path(task), :method => :delete, :confirm => "Are you sure?"

- else
  %em
    Any tasks yet.
  %br
  = link_to "New task", new_task_path